{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "lib": ["esnext", "dom", "dom.iterable"]
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "template",
    "bin",
    "docs/snippets",
    "scripts"
  ]
}
